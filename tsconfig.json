{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": false,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "playwright",
      "node"
    ]
  },
  "include": [
    "pages",
    "tests",
    "helpers",
    "playwright.config.ts"
  ]
}